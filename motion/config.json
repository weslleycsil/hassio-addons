{
	"name": "Motion",
	"version": "2.5.0",
	"slug": "motion",
	"description": "A software motion detector that integrates a usb webcam into hass.io",
	"startup": "system",
	"boot": "auto",
	"ports": {
		"8081/tcp": 8081,
		"8080/tcp": 8080
	},
	"arch": [
		"aarch64",
		"amd64",
		"armhf",
		"armv7",
		"i386"
	],
	"map": [
		"share:rw"
	],
	"devices": ["/dev/video0:/dev/video0:rwm"],
	"options": {
	  "config": "",
		"videodevice": "/dev/video0",
		"input": 0,
		"width": 640,
		"height": 480,
		"framerate": 100,
		"text_right": "%Y-%m-%d %T-%q",
		"target_dir": "/share/motion",
		"snapshot_interval": 30,
		"snapshot_name": "%v-%Y%m%d%H%M%S-snapshot",
		"picture_output": "on",
		"picture_name": "%v-%Y%m%d%H%M%S-%q",
		"movie_output": "on",
		"movie_name": "%v-%Y%m%d%H%M%S",
		"webcontrol_local": "on",
		"webcontrol_html": "on",
		"delete_images_interval": "5",
		"mqtt_server": "0.0.0.0",
		"mqtt_server_port": "1883",
		"mqtt_user": "mqtt",
		"mqtt_password": "mqtt",
		"mqtt_topic": "motion/camera/"
	},
	"schema": {
	  "config": "str",
		"videodevice": "str",
		"input": "int",
		"width": "int",
		"height": "int",
		"framerate": "int",
		"text_right": "str",
		"target_dir": "str",
		"snapshot_interval": "int",
		"snapshot_name": "str",
		"picture_output": "str",
		"picture_name": "str",
		"movie_output": "str",
	  	"movie_name": "str",
		"webcontrol_local": "str",
		"webcontrol_html": "str",
		"delete_images_interval": "str",
		"mqtt_server": "str",
		"mqtt_server_port": "str",
		"mqtt_user": "str",
		"mqtt_password": "str",
		"mqtt_topic": "str"
	}
}
